@page "{id}"
@model BazarSapiens.Pages.Admin.Banners.EditModel

@{
    ViewData["Title"] = "Editar Banner";
}

<h1>Editar Banner</h1>

<form method="post" class="form-horizontal" autocomplete="off" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input asp-for="Banner.Id" hidden />
    <input asp-for="Banner.Imagem" hidden />

    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                <label asp-for="Banner.Titulo" class="control-label">Título do Banner</label>
                <input asp-for="Banner.Titulo" class="form-control" />
                <span asp-validation-for="Banner.Titulo" class="text-danger"></span>
            </div>
        </div>

        <div class="col-md-12">
            <div class="form-group">
                <label asp-for="Banner.Subtitulo" class="control-label">Subtítulo do Banner</label>
                <textarea asp-for="Banner.Subtitulo" class="form-control"></textarea>
                <span asp-validation-for="Banner.Subtitulo" class="text-danger"></span>
            </div>
        </div>

        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="Banner.Ordem" class="control-label">Ordem de Visualização</label>
                <input asp-for="Banner.Ordem" class="form-control" />
                <span asp-validation-for="Banner.Ordem" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="Banner.Url" class="control-label">Url do Banner</label>
                <input asp-for="Banner.Url" class="form-control" />
                <span asp-validation-for="Banner.Url" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="Banner.Situacao" class="control-label">Situação do Banner</label>
                <select asp-for="Banner.Situacao" class="form-control" data-dropup-auto="false">
                    <option value="" disabled selected>Selecione a situação do banner</option>
                    <option value="Ativo">Ativo</option>
                    <option value="Inativo">Inativo</option>
                </select>
            </div>
        </div>

        <div class="col-lg-12">
            <div class="form-group">
                <label class="control-label">Banner</label><br />
                <img src="~/banners/@Model.Banner.Imagem" alt="@Model.Banner.Imagem" class="img-fluid">
            </div>
        </div>

        <div class="col-lg-12">
            <div class="form-group">
                <label asp-for="Arquivo" class="control-label">Logotipo do Banner</label>
                <input type="text" readonly="" class="form-control" placeholder="Selecione a logotipo do banner...">
                <input type="file" asp-for="Arquivo">
                <small class="text-danger">Recomendamos imagens com a resolução de 1200 x 580px</small>
            </div>
        </div>
    </div>

    <div class="form-group">
        <input type="submit" value="Alterar" class="btn btn-raised btn-primary" /> &nbsp;&nbsp;
        <a asp-page="Index">Voltar a lista de banners</a>
    </div>
</form>