@page "{id}"
@model BazarSapiens.Pages.Admin.Parceiros.EditModel

@{
    ViewData["Title"] = "Editar Parceiro";
}

<h1>Editar Parceiro</h1>

<form method="post" class="form-horizontal" autocomplete="off" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <div class="col-lg-12">
            <div class="form-group">
                <input asp-for="Parceiro.Id" hidden />
                <input asp-for="Parceiro.BazarId" hidden />

                <label asp-for="Parceiro.Nome" class="control-label">Nome do Parceiro</label>
                <input asp-for="Parceiro.Nome" class="form-control" />
                <span asp-validation-for="Parceiro.Nome" class="text-danger"></span>
            </div>
        </div>

        <div class="col-lg-6">
            <div class="form-group">
                <label asp-for="Parceiro.Url" class="control-label">Endereço eletrônico do Parceiro</label>
                <input asp-for="Parceiro.Url" class="form-control" />
                <span asp-validation-for="Parceiro.Url" class="text-danger"></span>
            </div>
        </div>

        <div class="col-lg-6">
            <div class="form-group">
                <label asp-for="Parceiro.Ordem" class="control-label">Ordem da Visualização</label>
                <input asp-for="Parceiro.Ordem" class="form-control" />
                <span asp-validation-for="Parceiro.Ordem" class="text-danger"></span>
            </div>
        </div>

        <div class="col-lg-12">
            <div class="form-group">
                <label asp-for="Parceiro.Descricao" class="control-label">Informações sobre a Parceria</label>
                <textarea asp-for="Parceiro.Descricao" class="form-control"></textarea>
            </div>
        </div>

        <div class="col-lg-12">
            <div class="form-group">
                <label class="control-label">Logotipo</label><br />
                <img src="~/parceiros/@Model.Logotipo" alt="@Model.Logotipo" class="img-fluid">
            </div>
        </div>

        <div class="col-lg-12">
            <div class="form-group">
                <label asp-for="Arquivo" class="control-label">Selecione um novo logotipo</label>
                <input type="text" readonly="" class="form-control" placeholder="Caso queira alterar, selecione um novo logotipo...">
                <input type="file" asp-for="Arquivo">
            </div>
        </div>

        <div class="form-group">
            <input type="submit" value="Salvar as alterações" class="btn btn-raised btn-primary" /> &nbsp;&nbsp;
            <a asp-page="Index">Voltar a lista de parceiros</a>
        </div>
    </div>
</form>

@section Head
{
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/simplemde/latest/simplemde.min.css">
}

@section Scripts
{
    <script src="https://cdn.jsdelivr.net/simplemde/latest/simplemde.min.js"></script>
    <script>
        var simplemde = new SimpleMDE({ element: document.getElementById("Parceiro_Descricao") });
    </script>
}