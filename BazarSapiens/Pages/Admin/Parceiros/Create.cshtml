@page
@model BazarSapiens.Pages.Admin.Parceiros.CreateModel

@{
    ViewData["Title"] = "Parceiros";
}

<h1>Adicionar Parceiro</h1>

<form method="post" class="form-horizontal" autocomplete="off" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <div class="col-lg-12">
            <div class="form-group">
                <label asp-for="Parceiro.Nome" class="control-label">Nome do Parceiro</label>
                <input asp-for="Parceiro.Nome" class="form-control" />
                <span asp-validation-for="Parceiro.Nome" class="text-danger"></span>
            </div>
        </div>

        <div class="col-lg-12">
            <div class="form-group">
                <label asp-for="Parceiro.Descricao" class="control-label">Informações sobre a parceria</label>
                <textarea asp-for="Parceiro.Descricao" class="form-control"></textarea>
            </div>
        </div>

        <div class="col-lg-12">
            <div class="form-group">
                <label asp-for="Arquivo" class="control-label">Logotipo do Bazar</label>
                <input type="text" readonly="" class="form-control" placeholder="Selecione a logotipo do parceiro...">
                <input type="file" asp-for="Arquivo">
            </div>
        </div>
    </div>

    <div class="form-group">
        <input type="submit" value="Adicionar" class="btn btn-raised btn-primary" /> &nbsp;&nbsp;
        <a asp-page="Index">Voltar a lista de parceiros</a>
    </div>
</form>

@section Head
{
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/simplemde/latest/simplemde.min.css">
}

@section Scripts
{
    <script src="https://cdn.jsdelivr.net/simplemde/latest/simplemde.min.js"></script>
    <script>
        var simplemde = new SimpleMDE({ element: document.getElementById("Parceiro_Descricao") });
    </script>
}